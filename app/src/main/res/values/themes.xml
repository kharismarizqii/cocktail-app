<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cocktail" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Cocktail.Text"/>
    <style name="Theme.Cocktail.Text.CardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Cocktail.Image">
    </style>

    <style name="Theme.Cocktail.Image.List">
    </style>

    <style name="Theme.Cocktail.Image.List.Rounded">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Theme.Cocktail.Container">
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.Cocktail.Container.Card">
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Theme.Cocktail.Container.Card.Small">
        <item name="contentPadding">8dp</item>
    </style>


    <style name="Theme.Cocktail.BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="behavior_peekHeight">350dp</item>
        <item name="behavior_hideable">true</item>
    </style>
</resources>